" $HOME/.vim/init/leader.vimrc

let mapleader = ' '

" spelling
map <leader>ss :setlocal spell!<cr>
map <leader>sn ]s
map <leader>sp [s
map <leader>sa zg
map <leader>sc z=

" windows
map <leader>w <C-w>w
map <leader>q <C-w>q

" buffers
map <leader>n :bn<cr>
map <leader>p :bp<cr>
map <leader>d :bd<cr>
